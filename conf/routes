# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Application.index()

# Sign Up
GET        /signup              controllers.SignUp.signUp()

# Administration
GET        /admin/user          controllers.Administration.user()
GET        /admin/device        controllers.Administration.device()
GET        /admin/alert         controllers.Administration.alert()
GET        /admin/cdsi          controllers.Administration.cdsi()

# Power Quality Monitoring
GET        /monitor             controllers.PowerQualityMonitoring.index()

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)
